<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <android.support.percent.PercentRelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/evento_nombre"
                android:layout_alignParentTop="true"
                android:textSize="20sp"
                android:textColor="@color/black"
                />

            <ImageView
                app:layout_widthPercent="50%"
                android:layout_height="wrap_content"
                android:id="@+id/evento_foto"
                android:layout_below="@+id/evento_nombre"

                android:layout_marginRight="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/evento_descripcion_label"
                android:layout_toRightOf="@+id/evento_foto"
                android:text="Descripción del evento"
                android:layout_below="@+id/evento_nombre"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/evento_descripcion"
                android:layout_toRightOf="@+id/evento_foto"
                android:layout_below="@+id/evento_descripcion_label"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/evento_puntuacion_label"
                android:layout_below="@+id/evento_descripcion"
                android:layout_toRightOf="@+id/evento_foto"
                android:text="Puntuación de usuarios"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/evento_puntuacion"
                android:layout_below="@+id/evento_puntuacion_label"
                android:layout_toRightOf="@+id/evento_foto"
                />

        </android.support.percent.PercentRelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>